<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:swps="urn:import:uk.ac.glam.smartwps.client.widget">
	<ui:style>
		.topBar {
			/*background-color: red;*/
		}
		.button {
			margin: 2px;
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" width="500px" height="400px">
		<g:north size="30">
			<g:DockLayoutPanel styleName='{style.topBar}'>
				<g:east size="40">
					<g:Button addStyleNames='{style.button}'>Go</g:Button>
				</g:east>
				<g:center>
					<swps:WaterMarkedTextBox placeholder="WMS GetCapabilities URL"></swps:WaterMarkedTextBox>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>

	</g:DockLayoutPanel>
</ui:UiBinder> 
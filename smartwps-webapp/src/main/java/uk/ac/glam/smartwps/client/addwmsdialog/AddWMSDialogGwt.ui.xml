<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:swps="urn:import:uk.ac.glam.smartwps.client.widget"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.topBar {
			/*background-color: red;*/
		}
		.button {
			margin: 2px;
		}
		.scroller {
		}
	</ui:style>

	<g:DockLayoutPanel unit="PX" width="650px" height="500px">
		<g:north size="30">
			<g:DockLayoutPanel styleName='{style.topBar}'>
				<g:east size="40">
					<g:Button addStyleNames='{style.button}' ui:field="goButton">Go</g:Button>
				</g:east>
				<g:center>
					<swps:WaterMarkedTextBox ui:field="urlInput" placeholder="WMS GetCapabilities URL"></swps:WaterMarkedTextBox>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:center>
<!-- 			<c:SimplePager ui:field="pager"/> -->
			<g:ScrollPanel addStyleNames='{style.scroller}'>
				<c:CellTable ui:field="cellTable" width="100%"/>
			</g:ScrollPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 